<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.CarProfileActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolcarprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/colorred"
        app:title="Car Profile"
        app:titleTextColor="@color/white"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/toolcarprofile"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imgcarprofile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="150dp"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/taxi"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/imgcarprofile"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Bajaj-Re"
            android:gravity="center"
            android:textSize="15dp"
            android:textStyle="bold"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/constraint1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/imgvehicleno"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/car"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgvehicleno"
            android:layout_marginLeft="20dp"
            android:text="KA01C6102"
            android:layout_marginTop="10dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0.7dp"
            app:layout_constraintTop_toBottomOf="@+id/imgvehicleno"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/colorred"
            android:layout_marginLeft="60dp"/>


        <ImageView
            android:id="@+id/imgtype"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/vehicletype"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgvehicleno" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="Car"
            app:layout_constraintStart_toEndOf="@+id/imgtype"
            app:layout_constraintTop_toBottomOf="@+id/imgvehicleno"
            app:layout_goneMarginTop="20dp" />
        <View
            android:layout_width="0dp"
            android:layout_height="0.7dp"
            app:layout_constraintTop_toBottomOf="@+id/imgtype"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/colorred"
            android:layout_marginLeft="60dp"/>

        <ImageView
            android:id="@+id/imgplace"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@+id/imgtype"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/citybuildings"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="Bangalore"
            app:layout_constraintStart_toEndOf="@+id/imgtype"
            app:layout_constraintTop_toBottomOf="@+id/imgtype"
            app:layout_goneMarginTop="20dp" />
        <View
            android:layout_width="0dp"
            android:layout_height="0.7dp"
            app:layout_constraintTop_toBottomOf="@+id/imgplace"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/colorred"
            android:layout_marginLeft="60dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/constraint2"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintpayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">



            <ImageView
                android:id="@+id/imgpayment"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/rupee"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="Payment Details"
                app:layout_constraintStart_toEndOf="@+id/imgpayment"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_goneMarginTop="30dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="0.7dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintpayment"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/colorred"
            android:layout_marginLeft="60dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintdocument"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/constraintpayment">




            <ImageView
                android:id="@+id/imgcardocument"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/file"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgcardocument"
                android:layout_marginLeft="20dp"
                android:text="car Documents"
                android:layout_marginTop="40dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>