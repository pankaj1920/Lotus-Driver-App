<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.EditdriverDocuments"
    android:orientation="vertical">




    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolcardocedit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/colorred"
        app:title="Edit Driver Documents"
        app:titleTextColor="@color/white">

    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/txttitle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/toolcardocedit"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/colorlight">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="which item needs to be updated"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/txtrc"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/txttitle"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Mobile Number"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            />
        <ImageView
            android:id="@+id/imgnxtrc"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/next"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/view1"
        android:layout_width="0dp"
        android:layout_height="0.7dp"
        app:layout_constraintTop_toBottomOf="@+id/txtrc"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/colorred"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/txtpermit"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/txtrc"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="License"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            />
        <ImageView
            android:id="@+id/imgpermit"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/next"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="0.7dp"
        app:layout_constraintTop_toBottomOf="@+id/txtpermit"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/colorred"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/conpuc"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/txtpermit"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Name"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            />
        <ImageView
            android:id="@+id/imgpuc"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/next"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/view3"
        android:layout_width="0dp"
        android:layout_height="0.7dp"
        app:layout_constraintTop_toBottomOf="@+id/conpuc"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/colorred"/>




    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/badge"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/conpuc"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Badge Number"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            />
        <ImageView
            android:id="@+id/imgbadge"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/next"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            />


        <View
            android:id="@+id/view5"
            android:layout_width="0dp"
            android:layout_height="0.7dp"
            app:layout_constraintTop_toBottomOf="@+id/badge"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/colorred"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Conadar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/conpuc"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Aadhar Number"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            />
        <ImageView
            android:id="@+id/imgadar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/next"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            />


        <View
            android:id="@+id/view6"
            android:layout_width="0dp"
            android:layout_height="0.7dp"
            app:layout_constraintTop_toBottomOf="@+id/Conadar"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/colorred"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>